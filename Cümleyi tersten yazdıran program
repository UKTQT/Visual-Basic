Public Class Form1
    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click
        Dim ters, b As String
        Dim a As Integer


        For a = (TextBox1.Text.Length - 1) To 0 Step -1

            b = TextBox1.Text.Substring(a, 1)


            ters += b

        Next

        TextBox2.Text = ters
    End Sub
End Class

